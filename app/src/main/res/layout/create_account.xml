<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_account_username_label"
        android:id="@+id/createAccountUsernameLabel"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="45dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_account_profile_icon_label"
        android:id="@+id/createAccountProfileIconLabel"
        android:layout_below="@+id/createAccountUsernameLabel"
        android:layout_alignLeft="@+id/createAccountUsernameLabel"
        android:layout_alignStart="@+id/createAccountUsernameLabel"
        android:layout_marginTop="34dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/createAccountProfileIcon"
        android:src="@mipmap/default_profile_icon"
        android:layout_alignTop="@+id/createAccountProfileIconLabel"
        android:layout_alignLeft="@+id/createAccountSelectImageButton"
        android:layout_alignStart="@+id/createAccountSelectImageButton"
        android:layout_above="@+id/createAccountSelectImageButton"
        android:layout_alignRight="@+id/createAccountSelectImageButton"
        android:layout_alignEnd="@+id/createAccountSelectImageButton"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/createAccountSelectImageButton"
        android:text="@string/create_account_select_image_button_text"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_account_title"
        android:id="@+id/createAccountCreateAccountButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="77dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:ems="10"
        android:gravity="left"
        android:layout_above="@+id/createAccountProfileIconLabel"
        android:layout_alignLeft="@+id/createAccountCreateAccountButton"
        android:layout_alignStart="@+id/createAccountCreateAccountButton"
        android:singleLine="true"
        android:maxLength="30"
        android:paddingBottom="5dp"
        android:hint="@string/create_account_edit_username_hint"/>
</RelativeLayout>