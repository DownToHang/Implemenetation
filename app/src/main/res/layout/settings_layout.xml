<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Change Username"
            android:id="@+id/usernameField"
            android:layout_row="0"
            android:layout_column="0"
            android:gravity="top"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="226dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/usernameEdit"
        android:layout_gravity="right"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/usernameField"
        android:layout_toEndOf="@+id/usernameField"
        android:layout_marginLeft="55dp"
        android:layout_marginStart="55dp"
        android:text="Enter Name..." />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="GPS Location"
        android:id="@+id/textView"
        android:layout_below="@+id/usernameEdit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Notifications"
        android:id="@+id/textView3"
        android:layout_below="@+id/gpsCheckBox"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="46dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gpsCheckBox"
        android:checked="false"
        android:layout_below="@+id/usernameEdit"
        android:layout_alignLeft="@+id/usernameEdit"
        android:layout_alignStart="@+id/usernameEdit" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/notificationCheckBox"
        android:checked="false"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignLeft="@+id/gpsCheckBox"
        android:layout_alignStart="@+id/gpsCheckBox" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Profile Picture"
        android:id="@+id/textView4"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="41dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/profilePic"
        android:src="@mipmap/default_profile_icon"
        android:layout_alignTop="@+id/textView4"
        android:layout_toRightOf="@+id/usernameField"
        android:layout_toEndOf="@+id/usernameField" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Browse"
        android:id="@+id/browsebutton"
        android:layout_below="@+id/profilePic"
        android:layout_alignRight="@+id/textView4"
        android:layout_alignEnd="@+id/textView4" />
</RelativeLayout>
