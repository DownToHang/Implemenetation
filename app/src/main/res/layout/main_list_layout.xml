<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/userStatusImageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@mipmap/green_circle_icone_4156_128"
        android:padding="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Some Username"
        android:id="@+id/usernameLabel"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/userStatusImageView"
        android:layout_alignBottom="@+id/userStatusImageView"
        android:gravity="center_vertical"
        android:textColor="#000000"
        android:textSize="22dp"
        android:padding="5dp" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/acceptImageButton"
        android:scaleType="fitXY"
        android:src="@mipmap/android_check"
        android:padding="5dp"
        android:baselineAlignBottom="false"
        android:background="#00ffffff"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/rejectImageButton"
        android:layout_toStartOf="@+id/rejectImageButton"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/rejectImageButton"
        android:padding="5dp"
        android:scaleType="fitXY"
        android:src="@mipmap/android_block"
        android:cropToPadding="false"
        android:clickable="false"
        android:background="#00ffffff"
        android:layout_alignTop="@+id/acceptImageButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp" />
</RelativeLayout>